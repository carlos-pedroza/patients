<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/backgroudapp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/statusItemGreen"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="@drawable/item_efect_green"
            android:orientation="horizontal">

            <TextView
                style="@style/itemTextName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10/10/2015 23:59"
                android:id="@+id/statusDateGreen"
                android:gravity="center_vertical"
                android:textSize="10sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/normalText"
                android:layout_weight="1"/>
            <TextView
                style="@style/itemTextName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="This is a massage to pruebe this design, like a real message status"
                android:id="@+id/statusMsgGreen"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/normalText"
                android:layout_weight="3" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/statusItemYellow"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="@drawable/item_efect_yellow"
            android:orientation="horizontal"
            android:onClick="onEditVisit">

            <TextView
                style="@style/itemTextName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10/10/2015 23:59"
                android:id="@+id/statusDateYellow"
                android:gravity="center_vertical"
                android:textSize="10sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/normalText"
                android:layout_weight="1"/>
            <TextView
                style="@style/itemTextName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="This is a massage to pruebe this design, like a real message status"
                android:id="@+id/statusMsgYellow"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/normalText"
                android:layout_weight="3" />
        </LinearLayout>
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/statusItemRed"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:background="@drawable/item_efect_red"
            android:orientation="horizontal"
            android:onClick="onEditVisit">

            <TextView
                style="@style/itemTextName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10/10/2015 23:59"
                android:id="@+id/statusDateRed"
                android:gravity="center_vertical"
                android:textSize="10sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/normalText"
                android:layout_weight="1"/>
            <TextView
                style="@style/itemTextName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="This is a massage to pruebe this design, like a real message status"
                android:id="@+id/statusMsgRed"
                android:gravity="center_vertical"
                android:textSize="12sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:textColor="@color/normalText"
                android:layout_weight="3" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>